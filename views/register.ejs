<body>
    <div class="container">
        <div class="col-md-8 offset-md-2">
            <div class="form_bg">
                <form method="POST" action="/register/location">
                    <h1 class="text-center mb-3 mt-5 fw-bold fs-1"><b>Register</b></h1>

                    <br />
                    <div class="form-group mb-3">
                        <input type="email" class="form-control"  placeholder="Email id">
                    </div>
 
                    <div class="form-group mb-3">
                        <input type="text" name="fullName" class="form-control" placeholder="Full Name ">
                    </div>

                    <div class="form-group mb-3">
                        <input type="text" name="mobileNum" class="form-control" placeholder="Mobile Number ">
                    </div>
                    <div class="form-group mb-3">
                        <input type="password" name="password" class="form-control" placeholder="Password">
                    </div>
                    <div class="form-group mb-3">
                        <input type="password" name="re-password" class="form-control" placeholder="Confirm Password">
                    </div>
                    <br />
                    <div class="align-center mb-3 col-md-8 offset-md-5">
                        <button type="submit" class="btn btn-default btn-dark" >Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>